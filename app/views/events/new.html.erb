<div class="container">
  <button class="close-btn" onclick="window.location.href='/'">Ã—</button>
  <h1>Create an event</h1>

  <div class="form-container">
    <%= form_with model: @event, local: true, html: { multipart: true } do |f| %>
      <div class="form-group">
        <%= f.label :title, "Title" %>
        <%= f.text_field :title, id: "title" %>
      </div>

      <div class="form-group">
        <%= f.label :date, "Date" %>
        <%= f.date_field :date, id: "date" %>
      </div>

      <div class="form-group">
        <%= f.label :time, "Time" %>
        <%= f.time_field :time, id: "time" %>
      </div>

      <div class="form-group">
        <%= f.label :tags, "Tags" %>
        <%= f.text_field :tags, id: "tags" %>
      </div>

      <div class="form-group">
        <%= f.label :description, "Description" %>
        <%= f.text_area :description, id: "description" %>
      </div>

      <div class="form-group upload-container">
        <%= f.label :image, "Upload Image" %>
        <label for="image" class="upload-box">
          <svg class="upload-icon" viewBox="0 0 24 24">
            <path d="M12 4v12m0-12l-4 4m4-4l4 4M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </label>
        <%= f.file_field :image, id: "image", accept: "image/*" %>
      </div>

      <div class="button-container">
        <%= f.submit "Submit", class: "submit-btn" %>
      </div>
    <% end %>
  </div>
</div>
